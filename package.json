{
  "name": "super-nintendo-game-info",
  "version": "1.0.0",
  "description": "Get information on every official North American SNES game release.",
  "author": "Ian Rose",
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianrosedev/Super-Nintendo-Game-Info.git"
  },
  "bugs": {
    "url": "https://github.com/ianrosedev/Super-Nintendo-Game-Info/issues"
  },
  "homepage": "https://github.com/ianrosedev/Super-Nintendo-Game-Info#readme",
  "scripts": {
    "format": "prettier --check --write \"**/*.{js, json, html, scss, md}\"",
    "format-ci": "prettier -l --write \"**/*.{js, json, html, scss, md}\"",
    "install-all": "concurrently \"npm install\" \"cd client && npm install\" \"cd server && npm install\"",
    "lint": "concurrently \"cd client && npm run lint\" \"cd server && npm run lint\"",
    "start": "concurrently \"cd client && PORT=3000 npm start\" \"cd server && PORT=3001 npm start\"",
    "start-dev": "concurrently -k \"cd client && PORT=3000 npm start\" \"cd server && PORT=3001 npm run start-dev\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "client/src/**/*.{js, json, html, scss, md}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "server/**/*.{js, json, md}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    }
  },
  "dependencies": {
    "concurrently": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4"
  }
}
